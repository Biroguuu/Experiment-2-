#include <iostream>
#include <iomanip>

using namespace std;

int main()
{

int month,date,year;

cout << "Enter your Birth month: (1-12)\n";
cin >> month; 
cout << "Enter your Birth date: (1-31)\n";
cin >> date;
cout << "Enter your Birth year: \n";
cin >> year;


// declarations for months

if (month == 1)
{
	cout << "January " << date << ", " << year << endl;
}



//leap year invalid date

else if (month == 2 && date > 28) 
{
	cout << "Invalid Date!!";
}

else if (month == 2)
{
 cout << "February " << date << ", " << year << endl;
}

else if (month == 3)
{
 cout << "March " << date << ", " << year << endl;
}

else if (month == 4)
{
 cout <<"April " << date << ", " << year << endl;
} 

else if (month == 5)
{
 cout <<"May " << date << ", " << year << endl;
} 

else if (month == 6)
{
 cout <<"June " << date << ", " << year << endl;
} 

else if (month == 7)
{
 cout <<"July " << date << ", " << year << endl;
} 

else if (month == 8)
{
 cout <<"August " << date << ", " << year << endl;
} 

else if (month == 9)
{
 cout <<"September " << date << ", " << year << endl;
} 

else if (month == 10)
{
 cout <<"October " << date << ", " << year << endl;
} 

else if (month == 11)
{
 cout <<"November " << date << ", " << year << endl;
} 

else if (month == 12)
{
 cout <<"December " << date << ", " << year << endl;
} 

//standard
else 
{
		cout << month << "," << date << "," << year << endl;
}

return 0;

}
